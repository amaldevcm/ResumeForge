{
  "manifest_version": 3,
  "name": "ResumeForge",
  "version": "1.0",
  "description": "Generate custom Resume and Cover Letter tailored for any job description using LLM",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "host_permissions": [],
  "background": {
    "service_worker": "background.js"
  }
}
